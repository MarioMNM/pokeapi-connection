<div class="search-bar">
  <div class="col-lg-12 mt-5">
    <% if flash[:alert] %>
      <div class="alert alert-warning"><%= flash[:alert] %></div>
    <% end %>
    <div class="mx-auto mt-5" style="width: 400px">
      <%= form_with(url: search_path, method: 'get', local: true) do %>
        <div class="form-group">
          <%= label_tag :pokemon_name, 'Search for a PokÃ©mon '%>
          <%= text_field_tag :pokemon_name, nil, placeholder: 'Eg. Charizard', class: 'form-control' %>
        </div>
        <%= button_tag 'Search', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>